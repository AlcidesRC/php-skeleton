{
    "authors": [
        {
            "name": "Alcides Ramos",
            "email": "info@alcidesrc.com",
            "homepage": "https://alcidesrc.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/Unit"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require-dev": {
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.0",
        "slope-it/clock-mock": "^0.4.0",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "clear-coverage": "rm -Rf /coverage/*",
        "tests": "phpunit --no-coverage --colors --testdox --order-by=random --random-order-seed=$(head -200 /dev/urandom | cksum | cut -f1 -d \" \")",
        "coverage": [
            "@clear-coverage",
            "phpunit --coverage-text --coverage-html=/coverage --colors --testdox --order-by=random --random-order-seed=$(head -200 /dev/urandom | cksum | cut -f1 -d \" \")"
        ],
        "phpcs": "phpcs --colors --standard=PSR12 app/ tests/",
        "phpcbf": "phpcbf --colors --standard=PSR12 app/ tests/",
        "linter": "parallel-lint --colors -e php -j 10 app/ tests/",
        "phpstan": "phpstan analyse --ansi --memory-limit=1G --configuration=phpstan.neon"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
